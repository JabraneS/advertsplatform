{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Adverts Platform{% endblock %}</title>

  {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  {% endblock %}
</head>

<body>
  <div class="container">
    <div id="header" class="jumbotron">

      <!---->
      {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
          Connecté en tant que {{ app.user.username }}
          -
          <a href="{{ path('fos_user_security_logout') }}">Sign Out</a>
      {% else %}
          <a href="{{ path('fos_user_security_login') }}">Log in</a>
          <a href="{{ path('fos_user_registration_register') }}">Registration</a>
      {% endif %}
      <!---->


      <h1>Ma plateforme d'annonces</h1>
      
    </div>

    <div class="row">

      <div id="menu" class="col-md-3">
        <h3>Les annonces</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('jomanel_platform_home') }}">Accueil</a></li>
          {% if is_granted('ROLE_ADMIN') %}
          <li><a href="{{ path('jomanel_platform_add') }}">Ajouter une annonce</a></li>
          <li><a href="{{ path('jomanel_platform_purge') }}">Purge Advert</a></li>
          {% endif %}
        </ul>

        <h4>Dernières annonces</h4>
        {{ render(controller("JOMANELPlatformBundle:Advert:menu", {'limit': 3})) }}

      </div>

      <div id="content" class="col-md-9">
        {% block body %}
        {% endblock %}
      </div>
    </div>

    <hr>

    <footer>
      <p>The sky's the limit © {{ 'now'|date('Y') }} and beyond.</p>
    </footer>
  </div>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

</body>
</html>