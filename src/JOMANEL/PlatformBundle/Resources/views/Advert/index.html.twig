{% extends "JOMANELPlatformBundle::layout.html.twig" %}

{% block title %}
 {{'index.1'|trans}} - {{ parent() }}  {#Home_ Acceuil  {{'index_title'|trans}}  #}
{% endblock %}

{% block jomanelplatform_body %}

  <h2>{{'index.2'|trans}}</h2>{#Adverts list_liste des annonces#} 

  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('jomanel_platform_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        {{'index.3'|trans}} {{ advert.author }},{#par_by#} 
        {{'index.4'|trans}} {{ advert.date|date('d/m/Y') }}{#le_in#} 
      </li>
    {% else %}
      <li>{{'index.5'|trans}}{#No adverts yet_Pas encore d'annonces#}</li>
    {% endfor %}
  </ul>

  <ul class="pagination">
  {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('jomanel_platform_home', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
  </ul>

{% endblock %}
