{% extends "JOMANELPlatformBundle::layout.html.twig" %}

{% block title %}
  Home - {{ parent() }}
{% endblock %}

{% block jomanelplatform_body %}

  <h2>Adverts list</h2>

  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('jomanel_platform_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        with {{ advert.author }},
        in {{ advert.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>No adverts yet</li>
    {% endfor %}
  </ul>

  <ul class="pagination">
  {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('jomanel_platform_home', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
  </ul>

{% endblock %}
