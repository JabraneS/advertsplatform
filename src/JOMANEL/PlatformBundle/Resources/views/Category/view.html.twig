
{% extends "JOMANELPlatformBundle::layout.html.twig" %}

{% block title %}
  {{ 'category.view.1'|trans}} - {{ parent() }}{# Catégorie  #}
{% endblock %}

{% block jomanelplatform_body %}

  <h1>{{ 'category.view.2'|trans}}</h1> {#{{ advert.title }}#}

  {% if category == null %}
    <p>{{ 'category.view.3'|trans}}</p>{#Catégorie inéxistante !#}
  
  {% else %}
    
    <h2>{{ category }}</h2> {#{{ advert.title }}#}
    
      <a href="{{ path('jomanel_platform_homeCategory') }}" class="btn btn-default">
          <i class="glyphicon glyphicon-chevron-left"></i>
          {{ 'category.view.4'|trans}}{# Retour à la liste des catégories #}
      </a>
      
      <a href="{{ path('jomanel_platform_editCategory', {'id': categoryId}) }}" class="btn btn-default">
          <i class="glyphicon glyphicon-editCategory"></i>
          {{ 'category.view.5'|trans}}{# Modifier la catégorie #}
      </a>
      
      <a href="{{ path('jomanel_platform_deleteCategory', {'id': categoryId}) }}" class="btn btn-danger">
          <i class="glyphicon glyphicon-trash"></i>
          {{ 'category.view.6'|trans}}{# Supprimer la catégorie#}
      </a>
  {% endif %} 

{% endblock %}

